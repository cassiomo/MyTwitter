<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/ivProfileImage"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/tvName"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screen_name"
        android:textSize="8dp"
        android:id="@+id/tvScreenName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_marginLeft="1dp"
        android:textColor="#8899a6"
        android:layout_toRightOf="@+id/tvName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tweet_body"
        android:id="@+id/tvBody"
        android:layout_marginLeft="5dp"
        android:textSize="12dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:focusable="false"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivProfileImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textSize="12dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:id="@+id/tvCreateAt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#8899a6"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBody"
        android:layout_below="@+id/tvBody"
        android:layout_alignLeft="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/ivBody"
        android:layout_alignLeft="@+id/ivBody"
        android:layout_alignStart="@+id/ivBody"
        android:weightSum="1">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/ivReply"
            android:src="@drawable/ic_reply" />

        <TextView
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvReply" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:id="@+id/ivRetweet"
            android:src="@drawable/ic_retweetcount" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvRetweet"
            android:layout_weight="0.10" />

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:id="@+id/ivfavorite"
            android:src="@drawable/ic_favoritecount" />

        <TextView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvFavorite"
            android:layout_weight="0.08" />
    </LinearLayout>

</RelativeLayout>
