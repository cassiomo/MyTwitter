<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.basictwitter.activities.ComposeActivity">

    <ImageView
        android:id="@+id/ivComposeProfileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvComposeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivComposeProfileImage"
        android:text="" />

    <TextView
        android:id="@+id/tvComposeScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvComposeName"
        android:layout_below="@+id/tvComposeName"
        android:textColor="#8899a6"
        android:text="" />

    <EditText
        android:id="@+id/etComposeStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivComposeProfileImage"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tvComposeScreenName"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="top"
        android:hint="What&apos;s happening?"
        android:inputType="textMultiLine"
        android:minLines="5" >

        <requestFocus />
    </EditText>

</RelativeLayout>
